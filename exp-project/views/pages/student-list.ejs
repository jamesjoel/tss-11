<%- include("../includes/header") %>

<div class="container" style="margin-top: 100px; min-height: 650px;">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">List of All Student</h3>
            <table class="table table-dark table-bordered table-hover table-striped">
                <tr>
                    <th>S.No.</th>
                    <th>Full Name</th>
                    <th>Class</th>
                    <th>Contact</th>
                    <th>City</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% students.forEach((value, index)=>{ %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= value.fullname %></td>
                        <td><%= value.class %></td>
                        <td><%= value.contact %></td>
                        <td><%= value.city %></td>
                        <td><a href="/student/edit/<%= value._id %>" class="btn btn-info btn-sm">Edit</a></td>
                        <td><a href="/student/delete/<%= value._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
</main>

<%- include("../includes/footer") %>