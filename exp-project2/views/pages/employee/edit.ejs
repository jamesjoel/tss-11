<%- include("../../includes/header") %>
<div class="container my-4">
    <div class="row">
        <div class="col-md-12">
            <form action="/employee/update/<%= updateemployee._id %>" method="post">
            <h3>Edit Employee</h3>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="mb-3">
                        <label for="">Full Name</label>
                        <input type="text" value="<%= updateemployee.name %> " name="name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="">Salary</label>
                        <input type="text" name="salary" value="<%= updateemployee.salary %>" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="">Department</label>
                        <select class="form-control" name="department">
                            <option>Select</option>
                            <option <% if(updateemployee.department == "HR"){ %> selected <% } %> >HR</option>
                            <option <% if(updateemployee.department == "Office"){ %> selected <% } %>>Office</option>
                            <option <% if(updateemployee.department == "Executive"){ %> selected <% } %>>Executive</option>
                            <option <% if(updateemployee.department == "Techical"){ %> selected <% } %>>Techical</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="">Gender</label>
                        Male <input type="radio" <% if(updateemployee.gender=="male"){ %> checked <% } %> name="gender" value="male" />
                        Female <input type="radio" <% if(updateemployee.gender=="female"){ %> checked <% } %> name="gender" value="female"/>
                    </div>
                    <div class="mb-3">
                        <label for="">Address</label>
                        <textarea class="form-control" name="address"><%= updateemployee.address %></textarea>
                    </div>
                    <br />
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
<%- include("../../includes/footer") %>