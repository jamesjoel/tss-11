<%- include('header') %>
        <div class="container my-4" style="min-height: 700px;">
            <form action="/save" method="post">
            <div class="row">
                <div class="col-md-6 offset-md-3 border border-dark p-4 rounded">
                    <h3 class="text-center">Add New Student</h3>
                    <div class="my-2">
                        <label class="mb-3 fw-bold">Full Name</label>
                        <input name="fullname" type="text" class="form-control" />
                    </div>
                    <div class="my-2">
                        <label class="mb-3 fw-bold">City</label>
                        <select name="city" class="form-control" >
                            <option>Select</option>
                            <option>Indore</option>
                            <option>Mumbai</option>
                            <option>Pune</option>
                        </select>
                    </div>
                    <div class="my-2">
                        <label class="mb-3 fw-bold">Gender</label>
                        <br />
                        Male <input type="radio" name="gender" value="male"/>
                        Female <input type="radio" name="gender" value="female"/>
                    </div>
                    <div class="my-2">
                        <label class="mb-3 fw-bold">Address</label>
                        <textarea name="address" class="form-control"></textarea>
                            
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
            </form>
        </div>
<%- include('footer') %>
